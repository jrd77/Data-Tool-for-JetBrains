<idea-plugin>
    <id>com.github.jrd77.data-tool.id</id>
    <name>Data-Tool</name>
    <vendor email="jrd77@qq.com" url="https://github.com/jrd77/Data-Tool-for-JetBrains">jrd77</vendor>

    <description><![CDATA[
        <h3>Data-Tool</h3>
        1.Parse Mybatis log to SQL. <br>
        2.Pretty Long SQL. <br>
        3.Pretty JSON String. <br>
        <hr>
        you can use origin string input the <i>'Before'
            Textarea</i>,into you excepted result (support JSON Pretty,Long-SQL Pretty,MybatisLog Parse)
        <hr>
        1.解析Mybatis日志 <br>
        2.格式化比较长的SQL语句 <br>
        3.格式化JSON字符串 <br>
        ]]></description>
    <idea-version since-build="193.5233.102" until-build="213.*"/>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="DataTool" secondary="true"
                    icon="/img/pluginIcon.svg"
                    anchor="right"
                    factoryClass="top.devinstall.sql.window.SqlWindowFactory"
                    doNotActivateOnStart="true"/>
    </extensions>

    <actions>
        <action id="ShowDataToolWindowId" class="top.devinstall.sql.action.ShowDataToolWindowAction"
                text="Show Data Tool Window" description="Show data tool window">
            <add-to-group group-id="WindowMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>